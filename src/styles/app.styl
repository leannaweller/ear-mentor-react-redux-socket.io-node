$backgroundColor = #fff

$colorBlack = #313131
$colorWhite = #fff
$colorGrey = #bdbdbd
$colorAqua = #f7f8fB
$colorRed = #f44336
$colorGreyDark = darken($colorGrey, 20%)
$colorGreyLight = lighten($colorGrey, 45%)

$colorPrimary = #00a6dc
$colorPrimaryHover = darken($colorPrimary, 10%)
$colorPrimaryVeryLight = lighten(#00a6dc, 86%)
// $colorPrimaryLightenHoverAlt = lighten($colorPrimary, 10%)


$progressBarSteps = 20





@import url(https://fonts.googleapis.com/css?family=Open+Sans\&subset=latin,latin-ext);

body
  background: $backgroundColor
  color: $colorBlack
  font-family: 'Open Sans', sans-serif
  font-size: 14px
  margin: 32px 0 0
  padding: 0

.error-message
  color: $colorRed

/* ===================== */
/* === Loader Screen === */
/* ===================== */
.loader-screen
  background: $backgroundColor
  position: fixed
  width: 100%
  height: 100%
  left: 0
  top: 0


.loader-screen__overlay
  border-radius: 50%
  background: #fff
  position: absolute
  top: 50%
  left: 50%
  margin-top: -48px
  margin-left: -48px
  line-height: 96px
  text-align: center
  font-size: 28px
  width: 96px
  height: 96px
  z-index: 2


.loader-screen__progress-bar
  background: $colorPrimaryVeryLight
  border-radius: 50%
  position: absolute
  top: 50%
  left: 50%
  margin-top: -56px
  margin-left: -56px
  width: 112px
  height: 112px
  z-index: 1


/* https://codepen.io/geedmo/pen/InFfd */
$steps = 10
$loops = round(100 / $steps)
$increment = 360 / $loops
$half = round($loops / 2)
for i in (1..$steps)
  .loader-screen__progress-bar--{i * $steps}
    if i < $half
      $nextdeg = 90deg + ($increment * i)
      background-image: linear-gradient(90deg, $colorPrimaryVeryLight 50%, transparent 50%, transparent), linear-gradient($nextdeg, $colorPrimary 50%, $colorPrimaryVeryLight 50%, $colorPrimaryVeryLight)
    else
      $nextdeg = -90deg + ($increment * (i - $half))
      background-image: linear-gradient($nextdeg, $colorPrimary 50%, transparent 50%, transparent),  linear-gradient(270deg, $colorPrimary 50%, $colorPrimaryVeryLight 50%, $colorPrimaryVeryLight)

/*
/* =============== */
/* === Spinner === */
/* =============== */
.spinner
  display: none
  background: rgba(0, 0, 0, .7)
  border-radius: 4px;
  position: fixed
  bottom: 32px
  left: 32px
  width: 48px
  height: 32px

.spinner--visible
  display: block


/* ============ */
/* === Form === */
/* ============ */
.form-control
  border: 1px solid $colorGreyLight
  line-height: 50px
  padding: 0 12px
  border-radius: 4px
  font-size: 16px
  height: auto;

.btn {
  border-radius: 4px
  line-height: 34px
  padding: 0
  margin: 0
  transition .4s background-color

  &.btn:hover,
  &.btn:active,
  &.btn:focus {
    background: $colorPrimaryHover
  }
}



.btn-shadow
  box-shadow: inset 0 -3px 0 0 rgba(50,50,50, .3)

.btn-lg {
  line-height: 50px
  text-transform: uppercase
  letter-spacing: 1.2px
}

.btn-primary {
  background-color: $colorPrimary
  border-color: $colorPrimary
  color: $colorWhite

  &:hover, &:active, &:active:focus, &:focus {
    background-color: $colorPrimaryHover
    border-color: $colorPrimaryHover
  }
}


.form__fieldset + .form__fieldset
  margin-top: 18px

.form__legend
  border-bottom: 1px solid $colorGreyLight
  margin-bottom: 12px
  padding-bottom: 4px
  font-size: 18px

.form__legend--error
  color: $colorRed

.form__input-group
  margin-bottom: 15px;

.form__input-group--error .form-control
  border-color: $colorRed

.checkbox-control input
  margin: 0 8px 0 0;
  padding: 0

.checkbox-control
  cursor: pointer
  font-weight: normal


.autocomplete__item
  background: #fff
  z-index: 200
  padding: 12px 12px

.autocomplete__item--highlighted
  background: $colorPrimary
  color: #fff;
  cursor: pointer

/* =============== */
/* === Top Bar === */
/* =============== */
.top-bar
  margin-bottom: 48px

.logo
  float: left

/* =============== */
/* === Nav Bar === */
/* =============== */
.main-nav
  float: right

.main-nav ul
  margin: 0
  list-style: none

.main-nav ul li
  float: left
  padding: 0 18px
  line-height: 40px
  font-size: 16px

.main-nav a
  color: $colorBlack
  transition .4s color

.main-nav a:hover,
.main-nav a:visited,
.main-nav a:focus
  color: $colorGreyDark
  text-decoration: none


/* ===================== */
/* === Settings Form === */
/* ===================== */
.settings-form {
  background: $colorAqua
  border-radius: 8px
  padding: 18px 24px 6px
  box-shadow: 2px 2px 10px darken($colorAqua, 15%)
}

.settings-form__error
  margin-top: 18px

.btn-setting
  background: none
  border-width: 0 0 2px 0
  width: 100%
  text-align: center

.btn-setting--active
  border-bottom-color: $colorPrimary

.points-per-answer-value
  text-align: center
  font-size: 18px
  margin: 0;

.interval-control
  font-size: 14px


/* ================= */
/* === Game Form === */
/* ================= */
.interval-selection {
  & .btn {
    margin-bottom: 12px;
  }
}

.interval-selection__heading
  color: $colorPrimary
  text-transform: lowercase
  font-size: 18px
  text-align: center
  margin: 0 0 18px 0


/* ===================== */
/* === Audio Manager === */
/* ===================== */
.audio-manager__volume-control-panel
  font-size: 32px

.audio-manager__volume-button
  display: block

.audio-manager__volume-indicator
  background: grey;
  display: block
  float: left
  width: 20px
  height: 50px;
  position: absolute
  bottom: 0

.audio-manager__volume-indicator--active
  background: red;

.audio-manager__volume-indicator--25 {
  left: 0
}

.audio-manager__volume-indicator--50 {
  left: 26px
}

.audio-manager__volume-indicator--75 {
  left: 52px
}

.audio-manager__volume-indicator--100 {
  left: 78px
}

/* ==================== */
/* === Welcome Page === */
/* ==================== */
.hero__title
  font-size: 32px

.hero__subtitle
  color: $colorGreyDark
  margin-top: 28px
  font-size: 18px
  font-weight: normal

/* =================== */
/* === Top Players === */
/* =================== */
.top-players {
  border: 1px solid $colorGrey
  font-size: 13px
  width: 100%

  .flag-icon {
    font-size: 16px
    margin-right: 10px
  }

  th {
    font-weight: normal
    padding: 6px 8px
    border-bottom: 1px solid $colorGrey
  }

  td {
    padding: 6px 8px
  }
}

.top-players__rank
  width: 15%

.top-players__name
  width: 55%

.top-players__score
  width: 30%
  text-align: center


/* ============== */
/* === Footer === */
/* ============== */
.footer
  border-top: 1px solid $colorGreyLight
  margin-top: 64px
  padding: 32px 0 24px

.footer__copyright
  float: left

.footer__nav
  float: right

.footer__nav ul
  list-style: none
  margin: 0
